@font-face
  font-family 'MANROPE-BOLD'
  src url('../fonts/MANROPE-BOLD.woff'), url('../fonts/MANROPE-BOLD.woff2')
  font-display swap
@font-face
  font-family 'MANROPE-LIGHT'
  src url('../fonts/MANROPE-LIGHT.woff'), url('../fonts/MANROPE-LIGHT.woff2')
  font-display swap
@font-face
  font-family 'MANROPE-MEDIUM'
  src url('../fonts/MANROPE-MEDIUM.woff'), url('../fonts/MANROPE-MEDIUM.woff2')
  font-display swap
@font-face
  font-family 'MANROPE-REGULAR'
  src url('../fonts/MANROPE-REGULAR.woff'), url('../fonts/MANROPE-REGULAR.woff2')
  font-display swap
@font-face
  font-family 'MANROPE-SEMIBOLD'
  src url('../fonts/MANROPE-SEMIBOLD.woff'), url('../fonts/MANROPE-SEMIBOLD.woff2')
  font-display swap

@font-face
  font-family 'MONESTA-LIGHT'
  src url('../fonts/MONESTA-LIGHT.woff'), url('../fonts/MONESTA-LIGHT.woff2')
  font-display swap

@font-face
  font-family 'PLAYFAIRDISPLAY-ITALIC'
  src url('../fonts/PLAYFAIRDISPLAY-ITALIC.woff'), url('../fonts/PLAYFAIRDISPLAY-ITALIC.woff2')
  font-display swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'MANROPE-LIGHT'
  font-weight 300
  line-height 120%
  color $color-beige

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px
