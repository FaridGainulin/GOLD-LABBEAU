.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #141412

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0 15px
    +above($breakpoints.sm)
      text-align: start
      padding 40px 0 20px
    +above($breakpoints.md)
      padding 60px 0 25px
    +above($breakpoints.xxl)
      padding 67px 0 30px

  &__box
    +above($breakpoints.sm)
      margin-left 293px
    +above($breakpoints.md)
      margin-left 393px
    +above($breakpoints.xxl)
      margin-left 493px

  &__sub-title
    margin -5px 0 10px
    +above($breakpoints.sm)
      margin -7px 0 10px
    +above($breakpoints.md)
      margin -10px 0 12px
    +above($breakpoints.xxl)
      margin -12px 0 14px

  &__text
    padding 10px 0
    +above($breakpoints.sm)
      padding 15px 0
    +above($breakpoints.md)
      padding 20px 0
    +above($breakpoints.xxl)
      padding 23px 0

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin-bottom 10px
    +above($breakpoints.sm)
      margin-bottom 30px
      width 568px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
    +above($breakpoints.md)
      margin-bottom 60px
      gap: 7px
    +above($breakpoints.xxl)
      margin-bottom 91px
      gap: 8px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 200px !important
      +above($breakpoints.md)
        width 240px !important
      +above($breakpoints.xxl)
        width 280px !important

  &__agree-wrapper
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding-left 10px
    +above($breakpoints.md)
      padding-left 15px
    +above($breakpoints.xxl)
      padding-left 22px

  &__img
    width: 250px;
    height: auto;
    margin: 5px 0 0 33px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 550px;
      bottom: 10px;
      left: -170px;
    +above($breakpoints.md)
      width: 760px;
      left: -233px;
    +above($breakpoints.xxl)
      width 961px
      left: -370px
