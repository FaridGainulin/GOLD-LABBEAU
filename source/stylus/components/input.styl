  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #E1CA6D
  &:focus
    color: #3C3831
    caret-color: #3C3831
    border 1px solid #E1CA6D
    box-shadow: 3px 3px 10px 0px #E1CA6D
    background: #fff
    &::placeholder
      color: #929292
  &::placeholder
    color: #929292
  +above($breakpoints.sm)
    padding: 0 15px;
    font-size: 14px;
    height: 50px
  +above($breakpoints.md)
    padding: 0 17px;
    font-size: 16px;
    height: 55px
  +above($breakpoints.xxl)
    padding: 0 22px;
    font-size: 18px;
    height: 60px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    border: none
    padding: 10px 10px 10px 22px
    resize: none
    height: 60px
    width 280px
    +above($breakpoints.sm)
      padding: 15px 10px 10px 15px
      width 100%
      height: 65px
    +above($breakpoints.md)
      padding: 17px 10px 10px 17px
      height: 70px;
    +above($breakpoints.xxl)
      padding: 21px 10px 10px 22px
      height: 80px
