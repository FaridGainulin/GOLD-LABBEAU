.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #141412

  &__container
    position relative
    z-index 1
    padding 20px 0 10px
    +above($breakpoints.sm)
      padding 25px 0 60px
    +above($breakpoints.md)
      padding 30px 0 90px
    +above($breakpoints.xxl)
      padding 35px 0 162px

  &__title,
  &__title-inner,
  &__text
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding: 20px 0 5px;
    +above($breakpoints.sm)
      padding 60px 0 10px
    +above($breakpoints.md)
      padding 90px 0 17px
    +above($breakpoints.xxl)
      padding 142px 0 19px

  &__title-inner
    padding 0 0 15px
    +above($breakpoints.sm)
      padding 0 0 20px
    +above($breakpoints.md)
      padding 0 0 25px
    +above($breakpoints.xxl)
      padding 0 0 33px

  &__sub-title
    width: 100%;
    height: 60px;
    border-radius: 100px;
    display: flex
    align-items: center;
    gap: 7px;
    padding-left: 10px;
    backdrop-filter: blur(20px);
    background: rgba(255, 255, 255, 0.05);
    +above($breakpoints.sm)
      width: 440px;
      height: 56px;
      gap: 12px;
      padding-left: 12px;
    +above($breakpoints.md)
      width: 565px;
      height: 74px;
      gap: 20px;
      padding-left: 15px;
    +above($breakpoints.xxl)
      width 660px
      height: 90px
      gap: 31px
      padding-left 17px

  &__sub-title-icon
    width 40px
    height: 40px
    +above($breakpoints.sm)
      width 35px
      height: 35px
    +above($breakpoints.md)
      width 45px
      height: 45px
    +above($breakpoints.xxl)
      width 56px
      height: 56px

  &__text
    padding 15px 0
    +above($breakpoints.sm)
      padding 20px 0 15px
    +above($breakpoints.md)
      padding 25px 0 18px
    +above($breakpoints.xxl)
      padding 33px 0 22px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 546px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
    +above($breakpoints.md)
      gap: 7px
    +above($breakpoints.xxl)
      gap: 8px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 188px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 269px !important

  &__agree-wrapper
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding-left 10px
    +above($breakpoints.md)
      padding-left 15px
    +above($breakpoints.xxl)
      padding-left 23px

  &__img
    width 280px
    height: auto
    margin: 10px 0 0 28px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 375px;
      right: -80px;
      bottom: 20px;
    +above($breakpoints.md)
      width: 495px;
      right: -80px;
      bottom: 25px;
    +above($breakpoints.xxl)
      width 674px
      right: -184px
      bottom: 31px
