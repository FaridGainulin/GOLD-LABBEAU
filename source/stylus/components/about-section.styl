.about-section
  background-image: url('../images/about-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #141412
  overflow hidden

  &__container
    position relative
    z-index 1
    padding: 15px 0 0
    +above($breakpoints.sm)
      padding 40px 0 60px
    +above($breakpoints.md)
      padding 50px 0 90px
    +above($breakpoints.xxl)
      padding 61px 0 136px

  &__icon-phone
    position: absolute
    z-index -1
    width: 85px;
    height: auto;
    bottom: 476px;
    left: 31px;
    +above($breakpoints.sm)
      width 267px
      bottom: 0
      left: -13px
    +above($breakpoints.md)
      width: 350px;
      left: -19px;
    +above($breakpoints.xxl)
      width 467px
      left: -27px

  &__icon-logo
    position: absolute
    z-index -1
    width: 100px;
    height: auto;
    bottom: 18px;
    left: -97px;
    +above($breakpoints.sm)
      width 99px
      left: -99px
      bottom: 0
    +above($breakpoints.md)
      width: 133px;
      left: -133px;
    +above($breakpoints.xxl)
      width 174px
      left: -174px

  &__box
    +above($breakpoints.sm)
      margin-left 245px
    +above($breakpoints.md)
      margin-left 328px
    +above($breakpoints.xxl)
      margin-left 400px

  &__title,
  &__sub-title,
  &__text,
  &__bottom-text
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    margin: -1px 0 3px 94px;
    +above($breakpoints.sm)
      margin: -7px 0 12px 193px;
    +above($breakpoints.md)
      margin: -10px 0 15px 303px;
    +above($breakpoints.xxl)
      margin -13px 0 22px 354px

  &__text
    padding 0 0 15px
    +above($breakpoints.sm)
      padding 0 0 50px
    +above($breakpoints.md)
      padding 0 0 70px
    +above($breakpoints.xxl)
      padding 0 0 107px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 20px 10px
    +above($breakpoints.md)
      gap: 40px 20px
    +above($breakpoints.xxl)
      gap: 57px 20px

  &__card
    width 280px !important
    height: 105px
    display: flex
    flex-direction: column
    justify-content center
    gap: 5px
    border-left: 1px solid rgba(195, 172, 128, 0.5)
    padding-left 25px
    +above($breakpoints.sm)
      width 235px !important
      height: 110px
      gap: 8px
      padding-left 20px
    +above($breakpoints.md)
      width 308px !important
      height: 145px
      gap: 12px
      padding-left 30px
    +above($breakpoints.xxl)
      width 380px !important
      height: 180px
      gap: 16px
      padding-left 44px

  &__bottom
    width 100%
    +above($breakpoints.sm)
      margin-top 40px
    +above($breakpoints.md)
      margin-top 60px
    +above($breakpoints.xxl)
      margin-top 108px

  &__bottom-text
    padding 0 0 10px 120px
    +above($breakpoints.sm)
      padding 0 0 15px
    +above($breakpoints.md)
      padding 0 0 20px
    +above($breakpoints.xxl)
      padding 0 0 28px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      width 480px
      gap: 6px
    +above($breakpoints.md)
      width 635px
      gap: 7px
    +above($breakpoints.xxl)
      width 778px
      gap: 8px
    input,
    button
      width 280px !important
      +above($breakpoints.sm)
        width 156px !important
      +above($breakpoints.md)
        width 207px !important
      +above($breakpoints.xxl)
        width 254px !important

  &__agree-wrapper
    display: flex
    align-items: center
    justify-content center
    text-align: center
    margin-top 10px
    +above($breakpoints.sm)
      text-align: start
      justify-content start
    +above($breakpoints.md)
      margin-top 16px

  &__img
    width 280px
    height: auto
    margin: 0px 0 -7px -2px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 484px;
      top: 0;
      left: -136px;
    +above($breakpoints.md)
      width: 660px;
      left: -192px;
    +above($breakpoints.xxl)
      width 860px
      left: -257px
