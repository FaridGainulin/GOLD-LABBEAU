.reasons-section
  background-image: url('../images/reasons-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #141412

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 30px 0 50px
    +above($breakpoints.md)
      padding 40px 0 80px
    +above($breakpoints.xxl)
      padding 52px 0 133px

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    +above($breakpoints.sm)
      padding-left 50px
    +above($breakpoints.md)
      padding-left 75px
    +above($breakpoints.xxl)
      padding-left 93px

  &__title-inner
    position: absolute
    top: -5px;
    left: 15px;
    +above($breakpoints.sm)
      top: -15px
      left: 0
    +above($breakpoints.md)
      top: -30px
    +above($breakpoints.xxl)
      top: -40px

  &__sub-title
    margin: -3px 0px 15px 110px;
    +above($breakpoints.sm)
      margin -5px 0 30px 330px
    +above($breakpoints.md)
      margin -7px 0 50px 530px
    +above($breakpoints.xxl)
      margin: -12px 0 76px 628px;

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content flex-end
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    height: 335px
    text-align: center
    display: flex
    flex-direction: column
    align-items: center
    background-color #1F1F1E
    padding: 15px 15px 20px 15px;
    +above($breakpoints.sm)
      padding 10px 10px 15px 10px
      width 235px !important
      height: 300px
    +above($breakpoints.md)
      width: 308px !important;
      height: 395px
      padding 20px 20px 30px 20px
    +above($breakpoints.xxl)
      width 380px !important
      height: 480px
      padding 22px 22px 32px 22px

  &__card-img
    width 100%
    height: auto

  &__card-title
    padding 15px 0
    +above($breakpoints.sm)
      padding 20px 0 12px
    +above($breakpoints.md)
      padding 25px 0 14px
    +above($breakpoints.xxl)
      padding 32px 0 18px

  &__bottom
    position relative
    width 100%
    display: flex
    flex-direction: column
    align-items: flex-end
    gap: 10px
    text-align: end
    margin-left: -14px
    +above($breakpoints.sm)
      margin 0
      align-items: flex-start
      text-align: start
      position: absolute
      left: 0
      bottom: 50px
      gap: 15px
    +above($breakpoints.md)
      gap: 18px
      bottom: 80px
    +above($breakpoints.xxl)
      gap: 21px
      bottom: 133px

  &__bottom-img
    position: absolute
    z-index -1
    width: 110px;
    height: auto;
    bottom: 33px;
    left: 25px;
    +above($breakpoints.sm)
      width: 205px;
      bottom: 74px;
      left: -3px;
    +above($breakpoints.md)
      width: 290px;
      bottom: 81px;
      left: -10px;
    +above($breakpoints.xxl)
      width 358px
      bottom: 91px
      left: -14px

  &__bottom-icon
    width 30px
    height: 30px
    +above($breakpoints.sm)
      width 30px
      height: 30px
    +above($breakpoints.md)
      width 38px
      height: 38px
    +above($breakpoints.xxl)
      width 44px
      height: 44px

  &__btn
    width 280px !important
    +above($breakpoints.sm)
      width 200px !important
    +above($breakpoints.md)
      width 260px !important
    +above($breakpoints.xxl)
      width 307px !important
