.info-section
  background-image: url('../images/info-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #141412
  overflow hidden

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 30px 0 60px
    +above($breakpoints.md)
      padding 40px 0 90px
    +above($breakpoints.xxl)
      padding 61px 0 141px

  &__title,
  &__sub-title,
  &__text,
  &__bottom
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    margin -5px 0 15px
    +above($breakpoints.sm)
      margin -6px 0 20px
    +above($breakpoints.md)
      margin -8px 0 25px
    +above($breakpoints.xxl)
      margin -12px 0 32px

  &__text
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 40px
    +above($breakpoints.md)
      padding-bottom 60px
    +above($breakpoints.xxl)
      padding-bottom 86px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 20px 10px
    +above($breakpoints.md)
      gap: 30px 20px
    +above($breakpoints.xxl)
      gap: 40px 20px

  &__card
    width 280px !important
    display: flex
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      width 300px !important
      gap: 20px
    +above($breakpoints.md)
      width 390px !important
      gap: 25px
    +above($breakpoints.xxl)
      width 480px !important
      gap: 30px

  &__card-icon
    width 30px
    height: 30px
    +above($breakpoints.sm)
      width 33px
      height: 33px
    +above($breakpoints.md)
      width 45px
      height: 45px
    +above($breakpoints.xxl)
      width 56px
      height: 56px

  &__bottom
    +above($breakpoints.sm)
      margin-top 40px
    +above($breakpoints.md)
      margin-top 60px
    +above($breakpoints.xxl)
      margin-top 85px

  &__bottom-title
    padding-right 150px
    +above($breakpoints.sm)
      padding 0

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin-top 15px
    +above($breakpoints.sm)
      flex-direction: row
      margin-top 20px
      gap: 6px
    +above($breakpoints.md)
      margin-top 25px
      gap: 7px
    +above($breakpoints.xxl)
      margin-top 30px
      gap: 8px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 170px !important
      +above($breakpoints.md)
        width 210px !important
      +above($breakpoints.xxl)
        width 268px !important

  &__agree-wrapper
    display: flex
    justify-content center
    margin-top 10px
    +above($breakpoints.sm)
      justify-content start
      margin-top 16px

  &__img
    width: 280px;
    height: auto;
    margin: 0 0 -86px -6px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 603px;
      bottom: 0;
      right: -180px;
    +above($breakpoints.md)
      width: 830px;
      right: -270px;
    +above($breakpoints.xxl)
      width 1082px
      right: -370px

  &__icon
    position: absolute
    width: 50px;
    height: 50px;
    bottom: 390px;
    right: 38px;
    +above($breakpoints.sm)
      width: 100px;
      height: 100px;
      bottom: 70px;
      right: 20px;
    +above($breakpoints.md)
      width: 130px;
      height: 130px;
      bottom: 93px;
    +above($breakpoints.xxl)
      width 182px
      height: 178px
      bottom: 112px
      right: 0
