.btn
  height: 45px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: #3C3831
  border-radius: 4px
  box-shadow: inset 0 -3px 0 0 rgba(0, 0, 0, 0.25);
  background: linear-gradient(90deg, #e1ca6d 0%, #efe7ba 65.3%, #a17c3e 100%);
  // text-transform: uppercase
  font-family: 'MANROPE-BOLD'
  font-weight: 700
  font-size: 14px
  line-height: 120%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 14px;
    height: 50px;
  +above($breakpoints.md)
    font-size: 16px;
    height: 55px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 60px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%


  &--call-me
    cursor pointer
    box-shadow: inset 0px -2px 0px 0px rgba(0, 0, 0, 0.25);
    font-family: 'MANROPE-SEMIBOLD'
    font-weight: 600
    line-height: 110%
    font-size: 9px;
    height: 19px;
    width: 90px;
    +above($breakpoints.sm)
      font-size: 12px;
      height: 30px;
      width 125px
    +above($breakpoints.md)
      margin-left 8px
      font-size: 13px;
      height: 36px;
      width 150px
    +above($breakpoints.xxl)
      margin-left 11px
      font-size: 14px;
      height: 41px
      width 174px
